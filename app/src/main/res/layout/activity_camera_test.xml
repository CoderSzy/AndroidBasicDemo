<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camera.CameraTestActivity">

    <FrameLayout
        android:id="@+id/fl_preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/btn_capture"
        android:layout_toStartOf="@+id/btn_capture">

    </FrameLayout>


    <Button
        android:id="@+id/btn_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/btn_capture" />

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_capture"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/fl_preview"
        android:layout_toRightOf="@id/fl_preview"
        android:contentDescription="@string/desc_result"
        android:src="@color/colorPrimary" />

</RelativeLayout>